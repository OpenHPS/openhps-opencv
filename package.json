{
  "name": "@openhps/opencv",
  "version": "0.1.2",
  "description": "Open Hybrid Positioning System - OpenCV component",
  "author": "Maxim Van de Wynckel",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenHPS/openhps-opencv.git"
  },
  "bugs": {
    "url": "https://github.com/OpenHPS/openhps-opencv/issues"
  },
  "homepage": "https://openhps.org",
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "main": "./dist/cjs/index.js",
  "types": "./dist/types/index.d.ts",
  "unpkg": "./dist/web/openhps-opencv.min.js",
  "jsdelivr": "./dist/web/openhps-opencv.min.js",
  "lsd:module": true,
  "module": "./dist/esm5/index.js",
  "es2015": "./dist/esm/index.js",
  "files": [
    "dist/**/*",
    "src/**/*",
    "LICENSE"
  ],
  "scripts": {
    "postinstall": "npm run build:opencv",
    "test": "mocha --config test/.mocharc.json",
    "test:docker": "docker-compose run -w /opt/app opencv-cpu npm run test",
    "cover": "nyc mocha --config test/.mocharc.json && nyc report --reporter=cobertura",
    "cover:ci": "nyc mocha --config test/.mocharc.json --reporter mocha-junit-reporter && nyc report --reporter=cobertura",
    "cover:ci:docker": "docker-compose run -w /opt/app opencv-cpu npm run cover:ci",
    "lint": "eslint src/**",
    "clean": "shx rm -rf ./dist && shx rm -rf ./docs/out",
    "build": "npm run clean && npm-run-all --parallel build:ts:* && npm run build:webpack",
    "build:opencv": "opencv-build-npm",
    "build:components": "componentsjs-generator",
    "build:quick": "npm-run-all --parallel build:ts:* && npm run build:webpack",
    "build:typedoc": "typedoc --options docs/typedoc.json",
    "build:ts:cjs": "tsc --build ./tsconfig/tsconfig.bundle.cjs.json",
    "build:ts:esm": "tsc --build ./tsconfig/tsconfig.bundle.esm.json",
    "build:ts:esm5": "tsc --build ./tsconfig/tsconfig.bundle.esm5.json",
    "build:ts:types": "tsc --build ./tsconfig/tsconfig.bundle.types.json",
    "build:webpack": "npm-run-all --parallel build:webpack:*",
    "build:webpack:prod": "webpack --env prod --",
    "build:webpack:dev": "webpack --env dev --",
    "deploy:typedoc": "gh-pages -d ./docs/out",
    "bump:development": "standard-version --prerelease alpha -m 'chore(alpha): %s' --skip.changelog",
    "bump:beta": "standard-version --prerelease beta -m 'chore(beta): %s' --skip.changelog",
    "bump:release": "standard-version -m 'chore(release): %s' --skip.changelog"
  },
  "dependencies": {
    "@openhps/video": ">=0.1.10",
    "@u4/opencv4nodejs": "^6.1.5"
  },
  "peerDependencies": {
    "@openhps/core": ">=0.3.36",
    "reflect-metadata": ">=0.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@openhps/core": ">=0.3.36",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@typescript-eslint/eslint-plugin": ">=5.25.0",
    "@typescript-eslint/parser": ">=5.25.0",
    "chai": "^4.3.6",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-deprecation": "^1.3.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "mocha": "^10.0.0",
    "mocha-junit-reporter": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.6.2",
    "reflect-metadata": ">=0.1.13",
    "shx": "^0.3.4",
    "standard-version": "^9.5.0",
    "ts-node": "^10.8.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2"
  },
  "nyc": {
    "branches": 10,
    "lines": 20,
    "functions": 20,
    "statements": 20,
    "include": [
      "src"
    ],
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true,
    "check-coverage": true,
    "report-dir": "./coverage"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
