{
  "name": "@openhps/opencv",
  "version": "0.1.0-alpha.10",
  "description": "Open Hybrid Positioning System - OpenCV component",
  "repository": {
    "type": "git",
    "url": "https://github.com/OpenHPS/openhps-opencv.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/cjs/index.js",
  "type": "commonjs",
  "types": "./dist/cjs/index.d.ts",
  "module": "./dist/esm/index.js",
  "exports": {
    "require": "./dist/cjs/index.js",
    "import": "./dist/esm/index.js"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "commit": "npm run build:typescript && npm run lint && npm run test && npx git-cz",
    "test": "mocha --experimental-worker",
    "test:jenkins": "jenkins-mocha --cobertura",
    "cover": "nyc mocha && nyc report --reporter=cobertura",
    "lint": "eslint src/**",
    "clean": "shx rm -rf ./dist && shx rm -rf ./docs",
    "build": "npm run clean && npm-run-all --parallel build:esm build:cjs build:typedoc",
    "build:esm": "tsc --module es2015 --outDir dist/esm",
    "build:cjs": "tsc --module commonjs  --outDir dist/cjs",
    "build:typedoc": "typedoc --excludePrivate --hideGenerator --out docs src",
    "publish:development": "standard-version --prerelease alpha -m 'chore(alpha): %s' --author='ci <ci@openhps.org>' && npm publish --tag dev",
    "publish:beta": "standard-version --prerelease beta -m 'chore(beta): %s' --author='ci <ci@openhps.org>' && npm publish --tag beta",
    "publish:release": "standard-version -m 'chore(release): %s' --author='ci <ci@openhps.org>' && npm publish --tag latest"
  },
  "author": "Maxim Van de Wynckel",
  "license": "Apache-2.0",
  "dependencies": {
    "opencv4nodejs": ">=5.6.0"
  },
  "peerDependencies": {
    "@openhps/core": ">=0.2.0-alpha.3",
    "reflect-metadata": ">=0.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "chai": "^4.2.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^30.7.8",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "jenkins-mocha": "^8.0.0",
    "mocha": "^6.2.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "prettier": "^2.2.1",
    "shx": "^0.3.3",
    "standard-version": "^7.1.0",
    "ts-node": "^8.8.2",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.3",
    "webpack": "^4.44.2",
    "webpack-auto-inject-version": "^1.2.2",
    "webpack-cli": "^3.3.12"
  },
  "nyc": {
    "branches": 10,
    "lines": 20,
    "functions": 20,
    "statements": 20,
    "include": [
      "src"
    ],
    "exclude": [
      "test"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true,
    "all": true,
    "check-coverage": true,
    "report-dir": "./coverage"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm run test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
